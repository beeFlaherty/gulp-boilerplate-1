{
	"paths": {
		"input": {
			"root": "src",
			"scripts": "src/scripts/",
			"styles": "src/styles/**/*.scss",
			"stylesFolder": "src/styles",
			"spriteSrc": "src/images/sprite-src/**/*.svg",
			"html": ["src/pages/**/*.html", "!src/includes/**/*.html"],
			"htmlWatch": ["src/**/*.html"],
			"images": "src/images/**/*",
			"static": ["src/**/*", "!src/**/*.html", "!src/scripts/**/*", "!src/styles/**/*", "!src/data/**/*"]
		},
		"output": {
			"devRoot": "./dist",
			"images": "src/images",
			"scripts": "dist/scripts",
			"styles": "dist/styles",
			"html": "dist/**/*.html",
			"release": "release/"
		}
	},
	"browserSync": {
		"useProxy": false,
		"proxyUrl": "localhost:8088/"
	},
	"bundles": ["main"],
	"linting": true,
	"sounds": {
		"active": true,
		"success": "success.mp3",
		"error": "error.mp3"
	},
	"lintedFiles": [
		"src/styles/**/*.scss",
		"!src/styles/vendor/**/*.scss"
	],
	"sprite": {
		"spritePath":"images/sprite.svg",
		"dest": "./src",
		"shapeDest": "dist/images/svg-icons",
		"scssDest": "styles/generated/_sprite.scss",
		"scssTemplate": "src/styles/vendor/_sprite-template.scss"
	},
	"tasksPath":"./gulp-tasks"
}
